{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*",
    "./__test__",
    "./mocks"
  ],
  "exclude": [
    "./node_modules",
    "./.vscode",
    "./coverage",
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "theme": "typedocTheme",
    "inputFiles": [
      "./src",
      "./src/**/index"
    ],
    "includes": [
      "./docsDependencies"
    ],
    "exclude": [
      "**/*+(.spec|.e2e).ts",
      "**/*+(.spec|.e2e).tsx",
      "**/*+(index|.spec|.e2e|.spec.tsx|.spec.ts).snap",
      "**/*.js"
    ]
  }
}